<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="0dp">

    <TextView
        android:id="@+id/rewardsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rewards"
        android:textSize="20sp"
        android:textColor="@color/grey_navy"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:paddingTop="32dp"
        android:paddingBottom="16dp" />

    <!-- Loyalty Card Section -->
    <include
        android:id="@+id/loyaltyStatus"
        layout="@layout/loyalty_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp" />

    <!-- Points Section -->
    <LinearLayout
        android:id="@+id/pointsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/points_bg"
        android:orientation="horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:padding="20dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/myPointsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Points:"
                android:textColor="@color/coffee_grey"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/pointsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2750"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_bold"
                android:textSize="32sp"
                android:paddingTop="4dp" />
        </LinearLayout>

        <Button
            android:id="@+id/redeemButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/redeem"
            android:backgroundTint="@color/redeem_but_color"
            android:textColor="@color/coffee_grey"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- History Rewards -->
    <TextView
        android:id="@+id/historyLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History Rewards"
        android:textColor="@color/grey_navy"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:paddingTop="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false" />

</LinearLayout>