<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/blue_bg"
    android:padding="16dp"
    android:id="@+id/loyaltyStatusRoot">

    <!-- Row 1: Title + Count -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/loyaltyCardText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/loyalty_card"
            android:textColor="@color/coffee_grey" />

        <TextView
            android:id="@+id/stampCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/coffee_grey" />
    </LinearLayout>

    <!-- Row 2: Centered LoyaltyProgressView -->
    <com.example.coffeeorderapp.HomePage.View.LoyaltyProgressView
        android:id="@+id/loyaltyProgressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/white_bg" />
</LinearLayout>
