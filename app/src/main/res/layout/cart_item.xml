<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/cart_item_bg"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/cartCoffeeImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/cartCoffeeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Coffee Name"
        android:textStyle="bold"
        android:textColor="@color/text_detail_color"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toEndOf="@id/cartCoffeeImage"
        app:layout_constraintTop_toTopOf="@id/cartCoffeeImage"
        app:layout_constraintEnd_toStartOf="@id/cartCoffeePrice"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/cartCoffeeCustomizations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="single | iced | medium | full ice"
        android:textColor="@color/cart_item_secondary_text"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_regular"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="@id/cartCoffeeName"
        app:layout_constraintTop_toBottomOf="@id/cartCoffeeName"
        app:layout_constraintEnd_toEndOf="@id/cartCoffeeName"/>

    <TextView
        android:id="@+id/cartCoffeeQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
        android:textColor="@color/grey_navy"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toStartOf="@id/cartCoffeeName"
        app:layout_constraintTop_toBottomOf="@id/cartCoffeeCustomizations"/>

    <TextView
        android:id="@+id/cartCoffeePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$3.00"
        android:textStyle="bold"
        android:textColor="@color/grey_navy"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cartCoffeeName"/>

</androidx.constraintlayout.widget.ConstraintLayout> 